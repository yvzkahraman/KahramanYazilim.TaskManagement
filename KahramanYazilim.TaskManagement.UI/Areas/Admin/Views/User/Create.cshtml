@model MemberCreateRequest
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Yeni Kullanıcı Ekleme Ekranı";
}

<form asp-action="Create" asp-controller="User" asp-area="Admin" method="post">

    <div class="mb-3">
        <label class="form-label">  Ad :</label>
        <input asp-for="Name" class="form-control" />
    </div>


    <div class="mb-3">
        <label class="form-label">  Soyad :</label>
        <input asp-for="Surname" class="form-control" />
    </div>



    <div class="mb-3">
        <label class="form-label">  Kullanıcı Adı :</label>
        <input asp-for="Username" class="form-control" />
    </div>

    

    <div class="mb-3">
        <a asp-action="List" asp-controller="User" asp-area="Admin" class="btn btn-secondary">Vazgeç</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>
</form>